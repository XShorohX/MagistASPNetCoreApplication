@{
    ViewData["Title"] = "Вход";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col s12 m6 offset-m3">
                <h1 class="center-align blue-text text-darken-2">Login</h1>
                <form method="post" asp-action="Login" asp-controller="Login" class="card">
                    <div class="card-content">
                        <div class="input-field">
                            <input id="email" type="text" asp-for="Login" class="validate" name="Login" required>
                            <label for="email">Login</label>
                        </div>
                        <div class="input-field">
                            <input id="password" type="password" asp-for="Password" class="validate" name="Password" required>
                            <label for="password">Password</label>
                        </div>
                        <div class="center-align red-text">
                            @ViewData["Message"]
                        </div>
                    </div>
                    <div class="card-action center-align">
                        <button type="submit" class="btn waves-effect waves-light blue">Войти</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            M.AutoInit();
            M.updateTextFields(); // Ensure text fields are properly initialized

            // Add focus and blur event listeners to update the labels
            $('input').on('focus blur', function () {
                M.updateTextFields();
            });
        });
    </script>
</body>
</html>